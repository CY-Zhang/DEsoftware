<Window x:Class="DeExampleCSharpWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="408" Width="713" Closing="Window_Closing" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*" />
            <ColumnDefinition Width="490*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*" />
            <RowDefinition Height="266*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal">
            <TextBlock Margin="10,0,4,0" Text="IP:" VerticalAlignment="Center"/>
            <TextBox Margin="0,0,4,0" Text="127.0.0.1" VerticalAlignment="Center"  Width="75" Name="IPAddr" />
            <Button Click="btnConnect_Click" Content="Connect" Height="23" Margin="8,0,32,0" Name="btnConnect" Width="75" />
            <TextBlock Margin="0,0,4,0" Text="Cameras" VerticalAlignment="Center" />
            <ComboBox Height="23" Name="cmbCameras" SelectionChanged="cmbCameras_SelectionChanged" Width="120" />
            <TextBlock Margin="0,0,4,0" Text="Transport:" VerticalAlignment="Center" />
            <ComboBox Height="23" Name="cmbTransport" Width="120" >
                <ComboBoxItem>MMF</ComboBoxItem>
                <ComboBoxItem>TCP</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1">            
            <Button Click="btnLiveCapture_Click" Content="Test Load Image Speed" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="4,0,0,0" Name="btnLiveCapture" Width="148" />
            <Button Click="btnGetImage_Click" Content="Capture Single Image" Height="23" HorizontalAlignment="Left" Margin="4,4,0,4" Name="btnGetImage" Width="148" Visibility="Hidden"/>
        </StackPanel>
        <DataGrid AutoGenerateColumns="False" Grid.Column="1" Grid.Row="1" ItemsSource="{Binding CameraProperties}" Margin="4">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" CanUserReorder="True" CanUserResize="True" Header="Property" />
                <DataGridTextColumn Binding="{Binding Value}" Header="Value" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
